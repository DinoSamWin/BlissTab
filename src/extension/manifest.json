{
    "manifest_version": 3,
    "name": "StartlyTab",
    "version": "1.0.0",
    "description": "A beautiful new tab page with gateway shortcuts.",
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "favicon",
        "contextMenus"
    ],
    "chrome_url_overrides": {
        "newtab": "index.html"
    },
    "action": {
        "default_popup": "src/extension/popup.html",
        "default_title": "Add Gateway"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+U",
                "mac": "Command+Shift+U"
            },
            "description": "Open Gateway Adder"
        }
    },
    "icons": {
        "128": "icons/icon-512x512.png"
    },
    "web_accessible_resources": [
        {
            "resources": [
                "assets/*",
                "icons/*"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ]
}